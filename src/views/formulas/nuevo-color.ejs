<%- include("../public/partials/header") -%>

    <div class="row padding-row my-md-5 d-flex justify-content-center">
        <div class="col-11 d-flex align-self center bg-principal h-100 col-ppal-middle-row">
            <form action="/formula/nuevo-color" method="post" class="w-100 h-100">
                <div class="row d-flex align-self-center p-5">
                    <div class="col-12 d-flex flex-column" id="contenedor-principal">
                        <h5 class="text-light text-center my-2">Datos del Color</h5>
                        <div class="form-group align-self-center d-flex w-100 my-3" id="datosColor">
                            <input name="sapColor" placeholder="Codigo SAP" type="text" class="form-control input-lg"
                                autofocus>
                        </div>
                        <div class="form-group align-self-center d-flex w-100 my-3">
                            <input name="descripcionColor" placeholder="Descripción" type="text" class="form-control w-100">
                        </div>
                        <div class="form-group align-self-center d-flex w-100 my-3">
                            <textarea class="form-control" name="comentarioColor" id="comentarioColor" placeholder="Comentarios del Color" rows="3"></textarea>
                        </div>
                        <h5 class="text-light text-center my-2">BOM de la Formula</h5>
                        <div class="form-group align-self-center d-flex w-100 my-3">
                            <input name="bom" placeholder="Nueva BOM" type="text" class="form-control w-100">
                        </div>
                        <div class="form-group align-self-center d-flex w-100 my-3">
                            <textarea class="form-control" name="comentarioFormula" id="comentarioFormula" placeholder="Comentarios de la Formula" rows="3"></textarea>
                        </div>
                        <h5 class="text-light text-center my-2">Pastas de la Formula</h5>
                        <div class="form-group align-self-center justify-content-center d-flex w-100 my-3">
                            <button type="button" class="btn btn-opcion bg-principal w-25" id="agregarPasta" onclick="crearInputPasta()">Agregar Pasta</button>
                        </div>
                        <div class="form-group align-self-center d-flex w-100 my-3" id="divPasta">
                            <input name="sap" placeholder="Código SAP de la pasta" type="text" class="form-control w-100" id="sap">
                            <input name="descripcion" placeholder="Descripcion" type="text" class="form-control w-100 mx-2" id="descripcion">
                            <select name="tecnologia" class="form-select" aria-label="Seleccion de tecnologia" id="tecnologia">

                                <option selected >Seleccione la tecnología </option>
                                <option value="Base Agua">Base Agua</option>
                                <option value="Base Solvente">Base Solvente</option>

                            </select>
                        </div>
                    </div>
                    <div class="form-group align-self-center d-flex w-100 my-3">
                        <button class="btn btn-opcion bg-principal w-100" type="submit">Registrar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <%- include("../public/partials/footer-formula") -%>